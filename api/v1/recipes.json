---
layout: 
---
{% assign all_categories = site.categories %}
{% assign category_names = "" | split: ',' %}

{% for item in all_categories %}
    {% assign category_names = category_names | push: item[0] %}
{% endfor %}

{
    "about": {
        "name"      : "{{ site.author.name }}",
        "email"     : "{{ site.author.email }}",
        "location"  : "{{ site.author.location }}",
        "twitter"   : "{{ site.author.twitter }}",
        "bio"       : "{{ site.author.bio }}"
    },
    "categories": {{ category_names | jsonify }},
    "recipes": [
	{% for post in site.posts %}{
            "id"                : "{{ post.id }}",            
            "title"             : "{{ post.title | escape }}",
            "categories"        : {{ post.categories | jsonify }},
            "featured_image"    : "{{ site.url }}{{ post.featured_image }}",
            "url"               : "{{ post.url }}",
            "path"              : "{{ post.path }}",
            "next"              : "{{ post.next.id }}",
            "previous"          : "{{ post.previous.id }}",
            "date"              : "{{ post.date }}",
            "shortdate"         : "{{ post.date | date : '%B %d, %Y' }}",
            "content"           : {{ post.content | strip_html | jsonify }},
            "excerpt"           : {{ post.excerpt | strip_html | jsonify }},
            "recipe"            : {
                "servings"              : "{{ post.recipe.servings }}",
                "prep"                  : "{{ post.recipe.prep }}",
                "cook"                  : "{{ post.recipe.cook }}",
                "total"                 : "{{ post.recipe.total }}",
                "ingredients_markdown"  : {{ post.recipe.ingredients_markdown | strip_html | jsonify }},
                "directions_markdown"   : {{ post.recipe.directions_markdown | strip_html | jsonify }},
                "notes"                 : {{ post.recipe.notes | strip_html | jsonify }}
            }
      }{% if forloop.last %}{% else %},{% endif %}
	{% endfor %}
    ]
}
