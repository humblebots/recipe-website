---
layout: 
---
[
	{% for post in site.posts %}{
            "id"                : "{{ post.id }}",            
            "title"             : "{{ post.title | escape }}",
            "categories"        : "{{ post.categories }}",
            "featured_image"    : "{{ site.url }}{{ post.featured_image}}",
            "url"               : "{{ post.url }}",
            "path"              : "{{ post.path }}",
            "next"              : "{{ post.next.id }}",
            "previous"          : "{{ post.previous.id }}",
            "date"              : "{{ post.date }}",
            "shortdate"         : "{{ post.date | date : '%B %d, %Y' }}",
            "content"           : "{{ post.content | strip | uri_escape }}",
            "excerpt"           : "{{ post.excerpt | strip | uri_escape }}",
            "recipe"            : {
                "servings"              : "{{ post.recipe.servings }}",
                "prep"                  : "{{ post.recipe.prep }}",
                "cook"                  : "{{ post.recipe.cook }}",
                "total"                 : "{{ post.recipe.total }}",
                "ingredients_markdown"  : "{{ post.recipe.ingredients_markdown | strip | uri_escape }}",
                "directions_markdown"   : "{{ post.recipe.ingredients_markdown | strip | uri_escape }}",
                "notes"                 : "{{ post.recipe.ingredients_markdown | strip | uri_escape }}"
            }
      }{% if forloop.last %}{% else %},{% endif %}
	{% endfor %}
]
